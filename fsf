[32m+[m[32mimport discord[m
[32m+[m[32mfrom discord.ext import commands[m
[32m+[m[32mfrom dotenv import load_dotenv[m
[32m+[m
[32m+[m[32mfrom database.db_manager import DatabaseManager[m
[32m+[m
[32m+[m[32mload_dotenv()[m
[32m+[m
[32m+[m[32mTOKEN = os.getenv("DISCORD_TOKEN")[m
[32m+[m[32mif not TOKEN:[m
[32m+[m[32m    raise RuntimeError("DISCORD_TOKEN not found. Create a .env file in project root.")[m
[32m+[m
[32m+[m[32mwith open("config.yaml", "r") as f:[m
[32m+[m[32m    config = yaml.safe_load(f)[m
[32m+[m
[32m+[m[32mBOT_PREFIX = config.get("bot", {}).get("command_prefix", "!")[m
[32m+[m[32mGUILD_ID = config.get("bot", {}).get("guild_id", None)[m
[32m+[m[32mGUILD_ID = int(GUILD_ID) if GUILD_ID else None[m
[32m+[m
[32m+[m[32mlogging.basicConfig([m
[32m+[m[32m    level=logging.INFO,[m
[32m+[m[32m    format="%(asctime)s - %(name)s - %(levelname)s - %(message)s"[m
[32m+[m[32m)[m
[32m+[m[32mlogger = logging.getLogger("modbot")[m
[32m+[m
[32m+[m
[32m+[m[32mclass ModBot(commands.Bot):[m
[32m+[m[32m    def __init__(self):[m
[32m+[m[32m        intents = discord.Intents.default()[m
[32m+[m[32m        intents.members = True[m
[32m+[m[32m        intents.guilds = True[m
[32m+[m[32m        intents.message_content = True[m
[32m+[m
[32m+[m[32m        super().__init__([m
[32m+[m[32m            command_prefix=BOT_PREFIX,   # allows ! commands IF your cogs use @commands.command[m
[32m+[m[32m            intents=intents,[m
[32m+[m[32m            help_command=None[m
[32m+[m[32m        )[m
[32m+[m
[32m+[m[32m        self.config = config[m
[32m+[m[32m        self.db = DatabaseManager()[m
[32m+[m
[32m+[m[32m    async def setup_hook(self):[m
[32m+[m[32m        await self.db.init_db()[m
[32m+[m[32m        logger.info("Database initialized")[m
[32m+[m
[32m+[m[32m        cogs = [[m
[32m+[m[32m            "cogs.moderation",[m
[32m+[m[32m            "cogs.channels",[m
[32m+[m[32m            "cogs.messages",[m
[32m+[m[32m            "cogs.roles",[m
[32m+[m[32m            "cogs.utilities",[m
[32m+[m[32m            "cogs.setup",[m
[32m+[m[32m        ][m
[32m+[m
[32m+[m[32m        for cog in cogs:[m
[32m+[m[32m            try:[m
[32m+[m[32m                await self.load_extension(cog)[m
